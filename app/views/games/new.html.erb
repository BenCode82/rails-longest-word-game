<%#=@letters.first %>
<div class="container">
  <h1> New game</h1>
  <div class="col-6 d-flex justify-content-around flex-direction: column mb-4">

    <% @letters.each do |letter|%>
      <div class="row justify-content-center align-items-center">
        <%= letter %>
      </div>
    <% end %>
  </div>


  <p>What is the longer word you can find ?</p>

  <form class="form-inline" action="/score" method="post" data-turbo="false">
    <div class="form-group">
      <input type="text" class="d-none" name="tirage" value="<%=@letters.join%>">
      <input type="text" class="form-control" name="user_input" placeholder="Ton mot">

      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <button type="submit" class="btn btn-primary">Play</button>
    </div>
  </form>
</div>
